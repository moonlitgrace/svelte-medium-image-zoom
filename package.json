{
  "name": "svelte-medium-image-zoom",
  "version": "0.0.1",
  "license": "MIT",
  "description": "Accessible medium.com-style image zoom for Svelte",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run package",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package && publint",
    "prepublishOnly": "npm run package",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "storybook": "NODE_OPTIONS='--no-experimental-require-module' storybook dev -p 6006",
    "build-storybook": "NODE_OPTIONS='--no-experimental-require-module' storybook build",
    "changeset": "changeset",
    "release": "npm run release:version && npm run release:publish",
    "release:version": "changeset version",
    "release:publish": "npm run build && changeset publish"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/moonlitgrace/svelte-medium-image-zoom.git"
  },
  "homepage": "https://github.com/moonlitgrace/svelte-medium-image-zoom",
  "bugs": "https://github.com/moonlitgrace/svelte-medium-image-zoom/issues",
  "author": "moonlitgrace <moonlitgrace.gaia@gmail.com> (https://moonlitgrace.space)",
  "contributors": [
    "moonlitgrace <moonlitgrace.gaia@gmail.com> (https://moonlitgrace.space)"
  ],
  "keywords": [
    "svelte",
    "medium",
    "image",
    "zoom",
    "image-zoom",
    "modal",
    "svelte-component"
  ],
  "tags": [
    "svelte",
    "medium",
    "image",
    "zoom",
    "image-zoom",
    "modal",
    "svelte-component"
  ],
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    }
  },
  "peerDependencies": {
    "svelte": "^5.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.11",
    "@chromatic-com/storybook": "^3.2.3",
    "@eslint/compat": "^1.2.3",
    "@storybook/addon-essentials": "^8.4.7",
    "@storybook/addon-interactions": "^8.4.7",
    "@storybook/addon-svelte-csf": "^5.0.0-next.21",
    "@storybook/blocks": "^8.4.7",
    "@storybook/svelte": "^8.4.7",
    "@storybook/sveltekit": "^8.4.7",
    "@storybook/test": "^8.4.7",
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/package": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "eslint": "^9.7.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.36.0",
    "globals": "^15.0.0",
    "prettier": "^3.3.2",
    "prettier-plugin-svelte": "^3.2.6",
    "publint": "^0.2.0",
    "storybook": "^8.4.7",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "svelte-portal": "^2.2.1",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.0.0",
    "vite": "^5.4.11"
  },
  "publishConfig": {
    "access": "public"
  }
}
